  // Study trip 2016 starts: description + gallery
  section#training.pfblock
    .container
      .row
        .col-sm-6.col-sm-offset-3
          .pfblock-header.wow.fadeInUp
            h2.pfblock-title= t('youthcouncil2015.studyTrip')
            .pfblock-line
            .pfblock-subtitle= t('youthcouncil2016.tripDescription1')
            .pfblock-subtitle= t('youthcouncil2016.tripDescription2')
            .pfblock-subtitle= t('youthcouncil2016.tripDescription3')
            .pfblock-subtitle= t('youthcouncil2016.tripDescription4')
            .pfblock-subtitle= t('youthcouncil2016.tripDescription5')
      // The Gallery as lightbox dialog, should be a child element of the document body
      .container
        // The Bootstrap Image Gallery lightbox, should be a child element of the document body
        #blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
          // The container for the modal slides
          .slides
          // Controls for the borderless lightbox
          h3.title
          a.prev &#8249;
          a.next &#8250;
          a.close &#215;
          a.play-pause
          ol.indicator
          // The modal dialog, which will be used to wrap the lightbox content
          .modal.fade
            .modal-dialog
              .modal-content
                .modal-header
                  button.close(type="button", aria-hidden="true") &#215;
                  h4.modal-title
                .modal-body.next
                .modal-footer
                  button.btn.btn-primary.pull-left.prev(type="button")
                    i.fa.fa-arrow-left
                    | Previous
                  button.btn.btn-primary.next(type="button")
                    | Next
                    i.fa.fa-arrow-right

